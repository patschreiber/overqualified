%footer
  .container-fluid
    .row
      .col-xs-12.col-sm-4
        %h3
          About Us
        %ul
          %li
            = link_to "The Company", about_path, :anchor => 'company'
          %li
            = link_to "The People", about_path, :anchor => 'people'
          %li
            = link_to "Why we do it", about_path, :anchor => 'why'
      .col-xs-12.col-sm-4
        %h3
          Shop
        %ul
          %li
            = link_to "New", shop_new_path
          %li
            = link_to "Gents", shop_gents_path
          %li
            = link_to "Gals", shop_gals_path
          %li
            = link_to "One of a Kinds (Defective/missprinted)", shop_uniques_path


      .col-xs-12.col-sm-4
        %h3
          Support
        %ul
          %li
            = link_to "Your Account", "#"
          %li
            = link_to "Contact Us", contact_us_path
          %li
            = link_to "Help", "#"
          %li
            = render "shared/social_links"
